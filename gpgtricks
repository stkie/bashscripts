#!/bin/bash
# gpgtricks by stephan@stephan.ws
# 2014-06-18	0.1	initial release

# echo the usage
usage_f ()
{
	echo ""
	echo $"Usage:		$0 {gpg-detach-sig|gpg-verify-sig}"
	echo "" 
	echo "Where:		gpg-detach-sig [sigfile.sig] [inputfile]"
        echo "		gpg-verify-sig [sigfile.sig] [inputfile]"
	echo ""
}

# main functions
gpg-detach-sig_f () {
	gpg --output "$1" --detach-sig "$2"
}
gpg-verify-sig_f () {
	gpg --verify "$1" "$2"
}

# execute
case "$1" in
  gpg-detach-sig)
	gpg-detach-sig_f "$2" "$3"
	;;
  gpg-verify-sig)
	gpg-verify-sig_f "$2" "$3"
	;;
  *)
	usage_f
	exit 2
esac

# EOF
